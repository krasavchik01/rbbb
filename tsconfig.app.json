{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false, // Постепенно включаем - сначала отдельные правила
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true, // Включаем для лучшей типизации
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true, // Включаем для безопасности
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false, // Оставляем false для React компонентов
    "noImplicitThis": true,
    "alwaysStrict": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
